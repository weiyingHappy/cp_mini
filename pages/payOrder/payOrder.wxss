.err_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.err_pannle {
  margin: auto;
  padding: 12rpx 30rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 4rpx;
  text-align: center;
  color: #fff;
}

.order_pannle_img {
  width: 100%;
  background: #fff;
  padding: 24rpx 0 32rpx;
  margin-bottom: 20rpx;
}

.order_no {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #404040;
}

.order_title {
  font-size: 32rpx;
  padding: 0 30rpx;
}

.order_remark {
  color: #5a5a5a;
  font-size: 28rpx;
  padding: 24rpx 30rpx 0;
  border-top: solid 1rpx #e9e9e9;
}

.order_img {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding: 30rpx 0 0 30rpx;
  border-top: solid 1rpx #e9e9e9;
  overflow: hidden;
}

.order_img image {
  width: 150rpx;
  height: 150rpx;
  border: solid 1rpx #ccc;
  margin: 0 30rpx 16rpx 0;
  box-sizing: border-box;
}

.order_pannle {
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 100%;
  padding: 32rpx 0 0;
  margin-bottom: 20rpx;
}

.order_pannle text {
  font-size: 28rpx;
  color: #404040;
  padding: 0 30rpx;
  margin-bottom: 32rpx;
}

.coupon_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.coupon_item text {
  padding: 0;
}

.coupon_item .choose_tag {
  font-size: 20rpx;
  color: #ec0000;
  padding: 4rpx 10rpx;
  border: solid 1rpx #ec0000;
  border-radius: 6rpx;
  margin-bottom: 32rpx;
  margin-left: 16rpx;
}

.coupon_item image {
  width: 28rpx;
  height: 28rpx;
  margin-bottom: 32rpx;
}

.coupon_item_left, .coupon_item_right {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.coupon_item_right {
  justify-content: flex-end;
}

.price_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price_item .price_num {
  color: #ec0000;
}

.pay_price .price_num {
  color: #ec0000;
}

.pay_price {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: solid 1rpx #e9e9e9;
  padding-top: 32rpx;
}

.ordered_btn_pannle {
  display: flex;
  justify-content: center;
  padding: 20rpx 30rpx;
}

.ordered_btn_pannle .long_btn {
  margin: 0;
  margin-left: 24rpx;
  padding: 0;
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: solid 1rpx #26888e;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
  background: #26888e;
}
