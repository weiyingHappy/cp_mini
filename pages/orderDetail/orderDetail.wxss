.order_top {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  color: #404040;
  padding: 40rpx 0 32rpx;
  margin-bottom: 20rpx;
}

.order_state {
  font-size: 30rpx;
  color: #404040;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.order_tip {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #919191;
}

.order_tip image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.order_time {
  font-size: 20rpx;
  color: #919191;
  margin-top: 16rpx;
}

.order_top button {
  margin: 0;
  padding: 0;
  margin-top: 24rpx;
  width: 120rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: solid 1rpx #189f17;
  font-size: 20rpx;
  color: #919191;
  line-height: 40rpx;
}

.order_pannle_img {
  width: 100%;
  background: #fff;
  padding: 24rpx 0 32rpx;
  margin-bottom: 20rpx;
}

.order_title {
  font-size: 32rpx;
  padding: 0 30rpx;
}

.order_remark {
  color: #5a5a5a;
  font-size: 28rpx;
  padding: 24rpx 30rpx 0;
  border-top: solid 1rpx #e9e9e9;
}

.order_img {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding: 30rpx 0 0 30rpx;
  border-top: solid 1rpx #e9e9e9;
  overflow: hidden;
}

.order_img image {
  width: 150rpx;
  height: 150rpx;
  border: solid 1rpx #ccc;
  margin: 0 30rpx 16rpx 0;
  box-sizing: border-box;
}

.flex_tag {
  padding: 0 30rpx 16rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: #919191;
}

.flex_tag image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.order_pannle {
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 100%;
  padding: 32rpx 0 0;
  margin-bottom: 20rpx;
}

.order_pannle text {
  font-size: 28rpx;
  color: #404040;
  padding: 0 30rpx;
  margin-bottom: 32rpx;
}

.order_pay_list {
  display: flex;
  flex-direction: column;
  margin-top: -32rpx;
  border-bottom: solid 1rpx #e9e9e9;
  font-size: 28rpx;
}

.order_pay_list text {
  margin-bottom: 24rpx;
}

.order_pay_item {
  display: flex;
  margin: 32rpx 20rpx 24rpx;
  justify-content: space-between;
  border-bottom: solid 1rpx #e9e9e9;
  margin-bottom: -1rpx;
}

.order_pay_item button {
  width: 100rpx;
  height: 56rpx;
  margin: 0;
  padding: 0;
  margin-right: 30rpx;
  border: solid 1rpx #26888e;
  border-radius: 6rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  text-align: center;
}

.order_pay_content {
  display: flex;
  flex-direction: column;
}

.order_pay_content text {
  padding-left: 10rpx;
}

.order_pay_content .order_pay_price {
  font-size: 24rpx;
}

.order_pay_content .order_pay_remark {
  font-size: 24rpx;
  color: #919191;
}

.order_cancel_content text {
  color: #bfbfbf;
  text-decoration: line-through;
}

.order_pay_time {
  display: flex;
  flex-direction: column;
  padding-top: 24rpx;
  border-bottom: solid 1rpx #e9e9e9;
}

.order_pay_time text {
  margin-bottom: 24rpx;
}

.order_pay_text {
  display: flex;
  flex-direction: row;
  padding-top: 24rpx;
}

.order_pay_text text {
  padding: 0 30rpx 0 0;
}

.order_pay_text text:first-child {
  padding: 0 0 0 30rpx;
  flex-shrink: 0;
}

.order_pannle .order_pannle_title {
  font-size: 32rpx;
  color: #404040;
  padding-bottom: 24rpx;
  border-bottom: solid 1rpx #e9e9e9;
  margin-bottom: 0;
}

.menu_list text {
  font-size: 28rpx;
  color: #5a5a5a;
}

.menu_item {
  display: flex;
  flex-direction: column;
  border-bottom: solid 1rpx #e9e9e9;
}

.menu_item text {
  font-size: 20rpx;
  color: #919191;
  margin-bottom: 24rpx;
}

.menu_item_program {
  display: flex;
}

.menu_item_img {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu_item_img image {
  width: 80rpx;
  height: 80rpx;
  margin: 32rpx 0 16rpx;
}

.menu button {
  margin: 24rpx auto;
  padding: 0;
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
  background: #26888e;
}

.order_btn_pannle {
  display: flex;
  justify-content: flex-end;
  padding: 40rpx 30rpx;
  border-top: solid 1rpx #e9e9e9;
}

.order_btn_pannle button {
  margin: 0;
  margin-left: 24rpx;
  padding: 0;
  width: 140rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: solid 1rpx #26888e;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #26888e;
}

.order_btn_pannle .confirm {
  color: #fff;
  background: #26888e;
}

.ordered_btn_pannle {
  display: flex;
  justify-content: center;
  padding: 40rpx 30rpx;
  border-top: solid 1rpx #e9e9e9;
}

.ordered_btn_pannle .long_btn {
  margin: 0;
  margin-left: 24rpx;
  padding: 0;
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: solid 1rpx #26888e;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #fff;
  background: #26888e;
}

.order_schedule_list {
  width: 750rpx;
  overflow: hidden;
}

.order_schedule {
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.order_schedule_item {
  display: flex;
  width: 100%;
}

.order_schedule_time {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 116rpx;
  height: 100rpx;
  color: #919191;
  font-size: 22rpx;
  text-align: end;
  flex-shrink: 0;
  flex-grow: 0;
}

.main_date {
  word-wrap: normal;
  font-size: 26rpx;
}

.order_schedule_line {
  position: relative;
  height: 100rpx;
  width: 1rpx;
  border-left: solid 1rpx #e9e9e9;
  margin: 0 44rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.order_schedule_line image {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: -15rpx;
  top: 50%;
  margin-top: -15rpx;
}

.order_schedule_content {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #919191;
  flex-shrink: 0;
  flex-grow: 0;
}

.main_state {
  font-size: 28rpx;
  color: #404040;
}

.schedule_item {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  flex-grow: 0;
}

.schedule_list {
  display: flex;
  align-items: center;
}

.second_state {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  left: -6rpx;
  top: 50%;
  background: #bfbfbf;
}

.tip_state {
  font-size: 24rpx;
  color: #919191;
  margin-right: 30rpx;
  width: 100%;
  flex-grow: 0;
}

.email_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.email_pannle {
  width: 560rpx;
  background: #fff;
  border-radius: 8rpx;
  margin: auto;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 56rpx;
}

.email_pannle input {
  margin: 24rpx auto 20rpx;
  width: 410rpx;
  height: 60rpx;
  border: solid 1rpx #e9e9e9;
  text-align: start;
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
}

.email_btn {
  display: flex;
  justify-content: space-between;
  border-top: solid 1rpx #e9e9e9;
}

.email_line {
  height: 100rpx;
  width: 1rpx;
  border-left: solid 1rpx #e9e9e9;
}

.email_btn button {
  height: 100rpx;
  width: 49%;
  margin: 0;
  border: none;
  color: #bfbfbf;
}

.email_btn .confirm_send {
  color: #26888e;
}
