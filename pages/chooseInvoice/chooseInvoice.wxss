/* pages/chooseInvoice/chooseInvoice.wxss */

.containers {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scroll_content {
  height: 100rpx;
  overflow: scroll;
  flex-grow: 1;
}

.invoice_tip {
  padding: 20rpx 40rpx 0 40rpx;
  display: flex;
  align-items: center;
}

.in_tips {
  color: #919191;
  font-size: 28rpx;
  margin-right: 18rpx;
}

.in_tips text {
  margin-bottom: 14rpx;
}

.in_tips text:last-child {
  margin-bottom: 0;
}

.in_tip {
  color: #ec0000;
  font-size: 20rpx;
}

.order_item {
  padding: 24rpx 30rpx;
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order_item:last-child {
  margin-bottom: 20rpx;
}

.item_pannle {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.order_content {
  display: flex;
  flex-direction: column;
}

.order_content > view {
  margin-bottom: 14rpx;
}

.order_content > view:last-child {
  margin-bottom: 0;
}

.order_num, .t_price {
  font-size: 24rpx;
  color: #404040;
}

.t_price text {
  color: #ec0000;
}

.order_title {
  color: #404040;
  font-size: 24rpx;
  /* display: flex;
  flex-direction: column; */
  width: 620rpx;
}

.order_title text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.order_title text:last-child {
  margin-bottom: 0rpx;
}

.order_time {
  font-size: 24rpx;
  color: #919191;
}

.choose_order {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-self: stretch;
  width: 40rpx;
}

.choose_order image {
  width: 36rpx;
  height: 36rpx;
}

.intro {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 34rpx;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.intro view {
  color: #26888e;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 32rpx;
  background: url(http://p0ry8xouf.bkt.clouddn.com/2b1aa50c3683cc10ae02534053d66d19.png) no-repeat left center;
  background-size: 24rpx 24rpx;
}

.footer {
  background: #fff;
  height: 120rpx;
  flex-shrink: 0;
  flex-grow: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: solid 1rpx #e9e9e9;
}

.footer image {
  border-bottom: none;
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.footer_all {
  display: flex;
  align-items: center;
  width: 500rpx;
}

.foot_lt {
  height: 120rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #404040;
  padding: 0 40rpx;
}

.foot_detail {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #404040;
}

.foot_detail text {
  color: #ec0000;
}

.bottomBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 100%;
  background: #26888e;
  border: none;
  margin: 0;
  border-radius: 0;
  color: #fff;
  font-size: 36rpx;
}

.nodraw {
  /* background: red; */
  color: #919191;
  color:rgba(0, 0, 0, 0.3);
  background-color:#F7F7F7;
} 
