.ad_popError {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: fixed;
  z-index: 9;
  align-items: center;
  height: 100%;
  width: 100%;
}

.ad_popError view {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 34rpx;
  justify-content: center;
  height: 160rpx;
  width: 560rpx;
  line-height: 48rpx;
  border-radius: 6rpx;
  background: #5a5a5a;
}

.ad_popError view text {
  padding-left: 74rpx;
  background: url(http://7xo285.com1.z0.glb.clouddn.com/Fjxw7rU3-Hv4_k2NiILfCCpo3sYw) no-repeat left center;
  background-size: 48rpx;
}

.phone_pannle {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #404040;
}

.phone_title {
  text-align: center;
  padding: 48rpx 30rpx 32rpx;
  border-bottom: solid 1rpx #e9e9e9;
}

.phone_item {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: solid 1rpx #e9e9e9;
}

.phone_item text {
  flex-shrink: 0;
}

.phone_item input {
  width: 100%;
}

.get_no {
  color: #26888e;
}

.phone_btn {
  font-size: 32rpx;
  color: #26888e;
  text-align: center;
  margin: 32rpx auto 24rpx;
}

.phone_disbtn {
  color: #eee;
}
