/* pages/mine/mine.wxss */

.user_pannle {
  background: #fff;
  padding: 24rpx 30rpx 36rpx;
}

.user_con {
  border-radius: 12rpx;
  background: #26888e;
  box-shadow: 0 2rpx 6rpx #54812e;
}

.user_info_pannle {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 300rpx;
}

.user_head {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  border: 10rpx solid transparent;
  margin: 0 32rpx;
  flex-shrink: 0;
}

.user_info {
  width: 100%;
  padding-right: 42rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  color: #fff;
}

.user_info text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user_name {
  margin-bottom: 40rpx;
}

.edit {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.phone_number {
  display: flex;
  align-items: center;
}

.phone_number text {
  flex-shrink: 0;
}

.phone_input {
  padding: 0;
  margin: 0;
  color: #fff;
}

.edit image {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  padding: 12rpx 0 12rpx 12rpx;
}

.user_company {
  padding: 20rpx 32rpx;
  border-top: 1rpx dashed #fff;
  display: flex;
  flex-wrap: nowrap;
  font-size: 24rpx;
  color: #fff;
}

.company_type {
  display: flex;
  align-self: flex-start;
  align-items: center;
  flex-shrink: 0;
}

.company_type image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 8rpx;
}

.mine_list {
  width: 100%;
  margin-top: 20rpx;
}

.mine_item {
  padding: 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #404040;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1rpx #e9e9e9;
}

.mine_list .mine_item:last-child {
  border: none;
}

.mine_item image {
  width: 28rpx;
  height: 28rpx;
}

.mine_item_left {
  display: flex;
  align-items: center;
}

.mine_item_left image {
  margin-right: 18rpx;
}
