/* pages/orders/orders.wxss */

.no_pannle {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}

.nothing {
  width: 400rpx;
  height: 400rpx;
}

.nothing_text {
  font-size: 24rpx;
  color: #bfbfbf;
}

.order_list {
  width: 100%;
}

.order_item {
  background: #fff;
  font-size: 24rpx;
  color: #404040;
  margin-bottom: 20rpx;
}

.order_top {
  padding: 24rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1rpx #e9e9e9;
  font-size: 28rpx;
}

.order_state {
   /* font-size: 28rpx; */
}

.order_bottom {
  padding: 24rpx 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  color: #919191;
}

.order_title {
  font-size: 32rpx;
  color: #404040;
  margin-bottom: 10rpx;
}

.order_tip {
  display: flex;
  align-items: center;
}

.order_tip image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 16rpx;
}

.order_time {
  font-size: 20rpx;
  margin-top: 14rpx;
}

.dd {
  display: flex;
  background: red;
  flex-direction: column;
  padding: 30rpx;
}

.d1,.d2,.d3 {
  height: 30rpx;
  background: gray;
  margin-top: 20rpx;
}
